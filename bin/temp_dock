#!/bin/sh

MODE=1

usage () {
	USAGE_STRING="usage: $0 [-u]
       $0 -h

Options:
  -u    undock (disable external monitors and enable laptop screen)

Miscellaneous:
  -h    display this help message and exit"

	case "$1" in
		out)
			echo "$USAGE_STRING"
			exit 0
			;;
		err)
			echo "$USAGE_STRING" >&2
			exit 1
			;;
	esac
}

while getopts "uh" OPT; do
	case "$OPT" in
		u)
			MODE=u
			;;
		h)
			usage "out"
			;;
		*)
			usage "err"
			;;
	esac
done

LAPTOP_OUTPUT="eDP-1"
RIGHT_OUTPUT="DP-1"

case "$MODE" in
	1)
		xrandr  --output "$LAPTOP_OUTPUT" --auto --left-of "$RIGHT_OUTPUT" \
			--output "$RIGHT_OUTPUT" --auto --primary \
		;;
	u)
		xrandr --output "$LAPTOP_OUTPUT" --auto --primary \
			--output "$RIGHT_OUTPUT" --off \
		;;
esac
